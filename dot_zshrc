# ===============================
# Oh My Zsh Configuration
# ===============================

# Path to your Oh My Zsh installation.
export ZSH="$HOME/.oh-my-zsh"

# Set name of the theme to load --- if set to "random", it will
# load a random theme each time Oh My Zsh is loaded, in which case,
# to know which specific one was loaded, run: echo $RANDOM_THEME
# See https://github.com/ohmyzsh/ohmyzsh/wiki/Themes
ZSH_THEME="robbyrussell"

# Which plugins would you like to load?
# Standard plugins can be found in $ZSH/plugins/
# Custom plugins may be added to $ZSH_CUSTOM/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
# Add wisely, as too many plugins slow down shell startup.
plugins=(git z fzf zsh-autosuggestions)

source $ZSH/oh-my-zsh.sh

# ===============================
# Zsh Options
# ===============================

setopt no_beep
setopt auto_pushd # Automatically push directories to stack
setopt pushd_ignore_dups # Don't add duplicate directories to stack
setopt auto_cd # Change directory without typing cd
setopt hist_ignore_dups # Don't add consecutive duplicate commands to history
setopt share_history # Share history between tabs and windows
setopt inc_append_history

# ===============================
# Environment Variables & PATH
# ===============================

# Local bin directory (Claude Code, etc.)
export PATH="$HOME/.local/bin:$PATH"

# Required for VSCode terminal to recognize node, npm, etc.
export PATH="$PATH:/opt/homebrew/bin/"

# ===============================
# Custom Aliases & Functions
# ===============================

# Load aliases
[ -f ~/.config/zsh/aliases/general.zsh ] && source ~/.config/zsh/aliases/general.zsh
[ -f ~/.config/zsh/aliases/chezmoi.zsh ] && source ~/.config/zsh/aliases/chezmoi.zsh
[ -f ~/.config/zsh/aliases/git.zsh ] && source ~/.config/zsh/aliases/git.zsh

# Load functions
[ -f ~/.config/zsh/functions/gwtadd.zsh ] && source ~/.config/zsh/functions/gwtadd.zsh
[ -f ~/.config/zsh/functions/ghnew.zsh ] && source ~/.config/zsh/functions/ghnew.zsh
[ -f ~/.config/zsh/functions/gconflict.zsh ] && source ~/.config/zsh/functions/gconflict.zsh
[ -f ~/.config/zsh/functions/kill-port.zsh ] && source ~/.config/zsh/functions/kill-port.zsh
[ -f ~/.config/zsh/functions/media-viewer.zsh ] && source ~/.config/zsh/functions/media-viewer.zsh

# ===============================
# Directory Hash
# ===============================

# Set frequently used directories to navigate with ~hash (e.g., ~n)
hash -d n="/Volumes/ExtremeSSD/01_Notes"
hash -d o="/Volumes/ExtremeSSD/01_Notes/github/obsidian-vault0"
hash -d g="/Volumes/ExtremeSSD/01_Notes/github"
hash -d c=$HOME/.claude

# ===============================
# Development Environment
# ===============================

# Node.js (nodenv)
eval "$(nodenv init - zsh)"

# Python (pyenv)
export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"
