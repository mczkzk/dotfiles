{
  "env": {},
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Read(**)",
      "Write(**)",
      "Edit(**)",
      "Glob(**)",
      "Grep(**)",
      "LS(**)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(npm:*)",
      "Bash(pnpm:*)",
      "Bash(yarn:*)",
      "Bash(node:*)",
      "Bash(ls:*)",
      "Bash(mv:*)",
      "Bash(cp:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(chmod:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(find:*)",
      "Bash(tar:*)",
      "Bash(unzip:*)",
      "Bash(echo:*)",
      "Bash(cat:*)",
      "Bash(pwd:*)",
      "Bash(cut:*)",
      "Bash(sort:*)",
      "Bash(tree:*)",
      "mcp__container-use__environment_checkpoint",
      "mcp__container-use__environment_create",
      "mcp__container-use__environment_add_service",
      "mcp__container-use__environment_file_delete",
      "mcp__container-use__environment_file_list",
      "mcp__container-use__environment_file_read",
      "mcp__container-use__environment_file_write",
      "mcp__container-use__environment_open",
      "mcp__container-use__environment_run_cmd",
      "mcp__container-use__environment_update",
      "mcp__serena__search_for_pattern",
      "mcp__serena__find_file",
      "WebFetch(domain:*)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf ~/*)",
      "Bash(git:push*)",
      "Bash(git:add -f*)",
      "Bash(git:add --force*)",
      "Bash(git commit --no-verify:*)",
      "Bash(git commit -n:*)",
      "Bash(HUSKY=0 git commit:*)",
      "Bash(git commit*--no-verify*)",
      "Bash(git commit*-n*)",
      "Bash(HUSKY=0*git commit*)",
      "Bash(*--no-verify*)",
      "Bash(*HUSKY=0*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "chmod +x ~/.claude/scripts/deny-check.sh && ~/.claude/scripts/deny-check.sh"
          }
        ]
      }
    ]
  }
}